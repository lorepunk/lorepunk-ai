---
import BaseHead from '../../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog â ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			body {
				background: var(--bg-dark);
				color: var(--text-primary);
			}
			.blog-nav {
				max-width: 800px;
				margin: 0 auto;
				padding: 1.5rem 1.5rem 0;
			}
			.blog-nav a {
				color: var(--accent);
				text-decoration: none;
				font-size: 0.9rem;
				letter-spacing: 0.05em;
				text-transform: uppercase;
			}
			.blog-nav a:hover {
				color: var(--accent-hover);
			}
			main {
				max-width: 800px;
				margin: 0 auto;
				padding: 2rem 1.5rem;
			}
			h1 {
				color: var(--accent);
				font-size: 1.5rem;
				letter-spacing: 0.05em;
				text-transform: uppercase;
				margin-bottom: 2rem;
				font-weight: 400;
			}
			.posts {
				list-style: none;
				margin: 0;
				padding: 0;
			}
			.post-item {
				padding: 1.5rem 0;
				border-bottom: 1px solid var(--border);
			}
			.post-item:first-child {
				padding-top: 0;
			}
			.post-item a {
				text-decoration: none;
				display: block;
			}
			.post-title {
				color: var(--text-primary);
				font-size: 1.25rem;
				font-weight: 700;
				margin: 0 0 0.25rem;
				line-height: 1.3;
				transition: color 0.2s ease;
			}
			.post-item a:hover .post-title {
				color: var(--accent);
			}
			.post-description {
				color: var(--text-secondary);
				font-size: 0.95rem;
				margin: 0.5rem 0 0;
				line-height: 1.5;
			}
			.post-date {
				color: var(--text-secondary);
				font-size: 0.85rem;
				margin: 0;
			}
			.blog-footer {
				max-width: 800px;
				margin: 0 auto;
				padding: 3rem 1.5rem;
				text-align: center;
				color: var(--text-secondary);
				font-size: 0.9rem;
			}
			.blog-footer a {
				color: var(--accent);
				text-decoration: none;
			}
		</style>
	</head>
	<body>
		<nav class="blog-nav">
			<a href="/">&larr; lorepunk</a>
		</nav>
		<main>
			<h1>Blog</h1>
			<ul class="posts">
				{
					posts.map((post) => (
						<li class="post-item">
							<a href={`/blog/${post.id}/`}>
								<p class="post-date">
									<FormattedDate date={post.data.pubDate} />
								</p>
								<h2 class="post-title">{post.data.title}</h2>
								{post.data.description && (
									<p class="post-description">{post.data.description}</p>
								)}
							</a>
						</li>
					))
				}
			</ul>
		</main>
		<footer class="blog-footer">
			<a href="/">lorepunk.ai</a>
		</footer>
	</body>
</html>
